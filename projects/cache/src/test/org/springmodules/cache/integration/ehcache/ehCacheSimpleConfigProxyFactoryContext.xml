<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cache="http://www.springmodules.org/schema/cache"
  xmlns:ehcache="http://www.springmodules.org/schema/ehcache"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springmodules.org/schema/cache http://www.springmodules.org/schema/cache/springmodules-cache.xsd
       http://www.springmodules.org/schema/ehcache http://www.springmodules.org/schema/ehcache/springmodules-ehcache.xsd">

  <bean id="cacheableServiceTarget"
    class="org.springmodules.cache.integration.CacheableServiceImpl">
    <property name="names">
      <list>
        <value>Luke Skywalker</value>
        <value>Leia Organa</value>
      </list>
    </property>
  </bean>

  <cache:beanRef id="cacheableService" ref="cacheableServiceTarget">
    <cache:cachingListeners>
      <cache:cachingListener ref="cachingListener" />
    </cache:cachingListeners>

    <ehcache:caching target="get*" cacheName="testCache" />
    <ehcache:flushing target="update*" cacheNames="testCache" />
  </cache:beanRef>
</beans>
