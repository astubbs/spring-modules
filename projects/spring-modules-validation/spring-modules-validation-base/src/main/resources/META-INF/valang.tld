<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN" "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
	<tlib-version>1.1.1</tlib-version>
	<jsp-version>1.2</jsp-version>
	<short-name>Valang</short-name>
	<uri>http://www.springmodules.org/tags/valang</uri>
	<description>A set of tags that enable the translation of Valang
		validators into JavaScript.</description>
	<tag>
		<name>codebase</name>
		<tag-class>org.springmodules.validation.valang.javascript.taglib.ValangCodebaseTag</tag-class>
		<body-content>empty</body-content>
		<description>
			Generates the JavaScript code that is necessary for the
			translated JavaScript validation rules to execute. This code needs to
			be included once per page and before any generated validation rules.
		</description>
		<attribute>
			<name>includeScriptTags</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>logId</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>globalErrorsId</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>
				Holds the id of the element that should hold/display the
				global errors
			</description>
		</attribute>
		<attribute>
			<name>fieldErrorIdSuffix</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>
				Holds the id suffix of the element that should
				hold/display a specific field error. For example, if the suffix is
				set to "_error" and the validated field is "firstName" then the
				validation error of this field will be shown in an element with id
				"firstName_err". The default value of this attribute is "_error".
            </description>
		</attribute>
	</tag>
	<tag>
		<name>validate</name>
		<tag-class>org.springmodules.validation.valang.javascript.taglib.ValangValidateTag</tag-class>
		<body-content>JSP</body-content>
		<description>
			Generates a set of JavaScript validation rules based on a
			supplied set of validation rules bound to a specific commandName
			and/or by translating the body content into valang.
		</description>
		<attribute>
			<name>commandName</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
	<tag>
		<name>beanValidate</name>
		<tag-class>org.springmodules.validation.bean.annotation.javascript.taglib.BeanAnnotationValidateTag</tag-class>
		<body-content>JSP</body-content>
		<description>
			Generates a set of JavaScript validation rules based on
			the bean annotations on the specified command class.
			</description>
		<attribute>
			<name>commandName</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>
				The name (key) for the command object in the model.
				Lower precedence then "commandObj" attribute.
			</description>
		</attribute>
        <attribute>
            <name>globalVar</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <description>
                The (global) javascript variable name to put the valangValidator object on. Useful if you need to dynamically add rules.
            </description>
        </attribute>
        <attribute>
            <name>validateOnSubmit</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <description>
                fire all validation on submit?
            </description>
        </attribute>
		<attribute>
			<name>commandObj</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>
				The actual command object. This has higher precedence
				then the "commandName" attribute
			</description>
		</attribute>
	</tag>
</taglib>