<?xml version="1.0" encoding="ISO-8859-1"?>
<validation xmlns="http://www.springmodules.org/validation/bean">

    <class name="org.springmodules.validation.bean.conf.xml.Person">

        <global>
            <valang expression="password == confirmPassword" code="passwords.do.not.match"/>
        </global>

        <property name="firstName">
            <not-blank/>
            <not-null/>
        </property>

        <property name="lastName">
            <not-blank/>
            <not-null/>
        </property>

        <property name="age">
            <range min="0" code="min"/>
        </property>

        <property name="email">
            <email/>
        </property>

        <property name="password">
            <length min="3"/>
        </property>

    </class>



</validation>